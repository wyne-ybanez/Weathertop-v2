<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="two fields">
    {{!-- Title --}}
    <div class="field">
      <label>Title</label>
      <input placeholder="Title" type="text" name="title">
    </div>
    {{!-- Artist --}}
    <div class="field">
      <label>Artist</label>
      <input placeholder="Artist" type="text" name="artist">
    </div>
    {{!-- Duration --}}
    <div class="field">
      <label>Duration</label>
      <input placeholder="00" type="number" name="duration">
    </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>
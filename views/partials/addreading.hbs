<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="two fields">
    {{!-- Code --}}
    <div class="field">
      <label>Code</label>
      <input placeholder="00" type="number" name="code">
    </div>
    {{!-- Temp --}}
    <div class="field">
      <label>Temp</label>
      <input placeholder="00" type="number" name="temperature">
    </div>
    {{!-- WindSpeed --}}
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00" type="number" name="windSpeed">
    </div>
    {{!-- Pressure --}}
    <div class="field">
      <label>Pressure</label>
      <input placeholder="00" type="number" name="pressure">
    </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>
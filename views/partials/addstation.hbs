<form class="ui stacked segment form" action="/dashboard/addstation" method="POST">
  <div class="three fields">
    <div class="field">
      <label>Title</label>
      <input placeholder="Title" type="text" name="name">
    </div>
    <div class="field">
      <label>Latitude</label> 
      <input placeholder="00.00" step=".01" type="number" name="lat">
    </div>
    <div class="field">
      <label>Longitude</label> 
      <input placeholder="00.00" step=".01" type="number" name="lng">
    </div>
  </div>
  <button class="ui blue submit button">Add Station</button>
</form>
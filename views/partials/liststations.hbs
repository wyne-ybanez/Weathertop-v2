{{#each stations}}
  <section class="ui stacked segment">
    <h2 class="ui header bottom-small-padding">
      {{name}}
    </h2>

    <!--  Trends and Latest Data  -->
    <div class="ui stackable five column grid">

      <div id="station" class="column">
        <div class="ui fluid inverted card">
          <div class="middle aligned content station-card-height">
            <h3 class="ui header top-medium-padding">
              {{name}}
              <i class="marker icon"></i>
            </h3>
            <p class="description">
              Lat:
              {{lat}}
              <br />
              Lng:
              {{lng}}
            </p>
          </div>
        </div>
      </div>

      {{! Latest Weather }}
      <div id="weather" class="column">
        <div class="ui fluid inverted card">
          <div class="middle aligned content station-card-height">
            <h3 class="ui header top-medium-padding">
              Weather
              {{#if readings}}
                <i id="latestWeatherIcon" class="{{latestWeatherIcon}}"></i>
              {{/if}}
            </h3>
            <p class="description">
              {{#if readings}}
                {{latestWeather}}
              {{/if}}
            </p>
          </div>
        </div>
      </div>

      {{! Latest Temp }}
      <div id="temperature" class="column">
        <div class="ui fluid inverted card">
          <div class="middle aligned content station-card-height">
            <h3 class="ui header top-medium-padding">
              Temp
              <i class="temperature low icon"></i>
            </h3>
            <p class="description">
              {{#if readings}}
                {{temperature}}
                Â°C
                <br />
                {{fahrenheitValue}}
                F
                <br />
                Max:
                {{maxTemperature}}
                <br />
                Min:
                {{minTemperature}}
              {{/if}}
            </p>
            <!--  Temperature Trends  -->
            {{#if trends}}
              {{#if tempTrend}}
                <i class="right floated arrow up icon"></i>
              {{/if}}
              {{#unless tempTrend}}
                <i class="right floated arrow down icon"></i>
              {{/unless}}
            {{/if}}
          </div>
        </div>
      </div>

      {{! Latest Wind }}
      <div id="wind" class="column">
        <div class="ui fluid inverted card">
          <div class="middle aligned content station-card-height">
            <h3 class="ui header top-medium-padding">
              Wind
              <i class="wind icon"></i>
            </h3>
            <p class="description">
              {{#if readings}}
                {{BeaufortValue}}
                bft
                <br />
                {{windCompass}}
                <br />
                Feels like
                {{windChill}}
                <br />
                Max:
                {{maxWindSpeed}}
                <br />
                Min:
                {{minWindSpeed}}
              {{/if}}
            </p>
            <!--  Wind Trends  -->
            {{#if trends}}
              {{#if windTrend}}
                <i class="right floated arrow up icon"></i>
              {{/if}}
              {{#unless windTrend}}
                <i class="right floated arrow down icon"></i>
              {{/unless}}
            {{/if}}
          </div>
        </div>
      </div>

      {{! Latest Pressure }}
      <div id="pressure" class="column">
        <div class="ui fluid inverted card">
          <div class="middle aligned content station-card-height">
            <h3 class="ui header top-medium-padding">
              Pressure
              <i class="cloud sun icon"></i>
            </h3>
            <p class="description">
              {{#if readings}}
                {{pressure}}
                hpa
                <br />
                Max:
                {{maxPressure}}
                <br />
                Min:
                {{minPressure}}
              {{/if}}
            </p>
            <!--  Pressure Trends  -->
            {{#if trends}}
              {{#if pressureTrend}}
                <i class="right floated arrow up icon"></i>
              {{/if}}
              {{#unless pressureTrend}}
                <i class="right floated arrow down icon"></i>
              {{/unless}}
            {{/if}}
          </div>
        </div>
      </div>

    </div>

  <div class="top-small-padding">
    {{! Explore Station }}
    <a href="/station/{{id}}" class="ui icon button">
      <i class="icon folder open"></i>
    </a>
    {{! Delete Station }}
    <a href="/dashboard/deletestation/{{id}}" class="ui icon button">
      <i class="icon trash"></i>
    </a>
  </div>

  </section>
{{/each}}
{{> menu id="accounts"}}

<!--  User first name & last name  -->
<header class="ui header">
    <h2>Welcome {{member.firstName}} {{member.lastName}}</h2>
</header>

<div class="ui equal width stackable grid">

    <div class="column">
        <div class="ui link cards top-small-padding">
            <div class="card">
                <div class="image">
                    {{#if member.avatar }}
                        <img src="/images/{{member.avatar}}.png">
                    {{else}}
                        <img src="/images/avatar.png">
                    {{/if}}
                </div>
                <div class="content">
                     
                    <div class="header">{{member.firstName}} {{member.lastName}}</div>
                    <div class="meta">
                        <a>User</a>
                    </div>
                    <div class="description">
                        <strong>Email:</strong>  {{member.email}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--  Edit account form  -->
    {{> editaccount}}
</div>
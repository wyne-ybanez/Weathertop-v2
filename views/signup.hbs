{{> welcomemenu id="signup"}}

<div>
  <p>
    For the demo use the pre-made dummy account:
  </p>
  <p>
    <span class="strong">Email:</span> homer@simpson.com
    <br>
    <span class="strong">Password:</span> secret
  </p>
</div>

<div class="ui two column stackable grid basic middle aligned segment">
    <!--  Image  -->
    <div class="column">
        <img class="ui image" src="/images/registration-img.png">
    </div>

    {{!-- Form --}}
    <div class="column">
      <form class="ui raised segment form" action="/register" method="POST">
        <h3 class="ui header">Register</h3>
        <div class="two fields">
          <div class="field">
            <label>First Name</label>
            <input placeholder="First Name" type="text" name="firstName" />
          </div>
          <div class="field">
            <label>Last Name</label>
            <input placeholder="Last Name" type="text" name="lastName" />
          </div>
        </div>
        <div class="field">
          <label>Email</label>
          <input placeholder="Email" type="text" name="email" />
        </div>
        <div class="field">
          <label>Password</label>
          <input type="password" name="password" />
        </div>
        {{!-- default avatar --}}
        <div class="field display-none">
          <input name="avatar" value="avatar" />
        </div>
        <button class="ui blue submit button">Submit</button>
      </form>
    </div>

</div>